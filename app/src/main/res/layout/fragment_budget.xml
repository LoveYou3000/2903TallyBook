<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/md_yellow_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_margin="10sp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:text="预算"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/budget_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/budget_month"
                            android:textColor="@color/md_black_1000"
                            android:textSize="18sp"
                            android:layout_margin="10sp"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/budget_edit"
                            android:textSize="18sp"
                            android:layout_margin="10sp"
                            android:text="编辑预算"
                            android:gravity="right"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <com.android.tu.circlelibrary.CirclePercentBar
                            android:id="@+id/circle_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_gravity="center_horizontal"
                            app:arcWidth="30dp"
                            app:circleRadius="80dp"
                            app:centerTextSize="30sp"
                            app:arcColor="@color/colorPrimary"
                            app:centerTextColor="@color/colorAccent"
                            app:arcStartColor="@android:color/holo_green_light" />

                        <LinearLayout
                            android:layout_marginRight="10sp"
                            android:layout_marginLeft="10sp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:layout_marginBottom="10sp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:text="剩余预算"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/remain_amount"
                                    android:gravity="right"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlHardcoded" />

                            </LinearLayout>

                            <View
                                android:layout_marginTop="10sp"
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="#ff464646"/>

                            <LinearLayout
                                android:layout_marginTop="20sp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:text="本月预算"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/budget_amount"
                                    android:gravity="right"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20sp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:text="本月支出"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/month_out"
                                    android:gravity="right"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20sp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:text="本月收入"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/month_in"
                                    android:gravity="right"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:textColor="@color/md_black_1000"
                            android:textSize="18dp"
                            android:layout_weight="0.5"
                            android:layout_margin="10sp"
                            android:text="存钱管理"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/saving_edit"
                            android:textSize="18dp"
                            android:layout_margin="10sp"
                            android:text="编辑"
                            android:gravity="right"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:text="存钱目的"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textColor="@color/md_red_800"
                                android:id="@+id/saving_purpose"
                                android:gravity="right"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#ff464646"/>

                        <LinearLayout
                            android:layout_marginTop="20sp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:text="所需金额"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/saving_amount"
                                android:gravity="right"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20sp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:text="已存金额"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/saving_already"
                                android:gravity="right"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20sp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:text="所需金额"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/saving_need"
                                android:gravity="right"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:padding="10dp"
                            android:layout_margin="20dp"
                            android:background="@color/md_red_400"
                            android:id="@+id/saving_status"
                            android:textColor="#000"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:text="革命尚未成功,同志仍需努力!"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>